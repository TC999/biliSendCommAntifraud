<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="18dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="1">

                <TableRow android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/txv_copy_comment"
                        android:foreground="?selectableItemBackground"
                        android:text="评论内容" />

                    <TextView
                        android:id="@+id/txv_comment_content"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>
                <!--<TableRow android:layout_height="150dp"
                    android:layout_marginVertical="5dp">
                    <TextView
                        android:foreground="?selectableItemBackground"
                        android:text="图片" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pictures"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                </TableRow>-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="最后状态" />

                    <TextView
                        android:id="@+id/txv_last_state"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="初始状态" />

                    <TextView
                        android:id="@+id/txv_first_state"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="评论区源ID" />

                    <TextView
                        android:id="@+id/txv_source_id"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />

                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="评论区oid" />

                    <TextView
                        android:id="@+id/txv_oid"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp">

                    <TextView android:text="评论区类型" />

                    <TextView
                        android:id="@+id/txv_area_type"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp">

                    <TextView android:text="uid" />

                    <TextView
                        android:id="@+id/txv_uid"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp">

                    <TextView android:text="rpid" />

                    <TextView
                        android:id="@+id/txv_rpid"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp">

                    <TextView android:text="parent" />

                    <TextView
                        android:id="@+id/txv_parent"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp">

                    <TextView android:text="root" />

                    <TextView
                        android:id="@+id/txv_root"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="检查日期" />

                    <TextView
                        android:id="@+id/txv_check_date"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView android:text="发送日期" />

                    <TextView
                        android:id="@+id/txv_send_date"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true" />
                </TableRow>

                <TableRow
                    android:layout_marginVertical="5dp">
                    <TextView
                        android:text="评论区状况"/>
                    <TextView
                        android:id="@+id/txv_checked_area"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginVertical="5dp">
                    <TextView
                        android:text="评论区申诉"/>
                    <TextView
                        android:id="@+id/txv_appeal_state"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true"
                        />
                </TableRow>
            </TableLayout>



        </LinearLayout>

</ScrollView>